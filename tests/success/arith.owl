locality alice

struct t { 
    x : Data<adv> | |nonce| |,
    y : Data<adv> | |nonce| |,
    z : Data<adv> | |nonce| |
}

def amain (a : t) @ alice : Unit = 
    assert |nonce| == |nonce|;
    assert 2 + 3 == 5;
    assert 2 * (3 + 4) == 14;
    assert |nonce| + |nonce| == 2 * |nonce|;
    assert zero() == 0;
    parse a as t(x', y', z') in 
    let a' = t(x', y', z') in
    assert (length(a') == |nonce| + |nonce| + |nonce|);
    assert (length(a') == 3 * |nonce|);

    /*
    TODO: the below assertion only works with the above junk
    */
    assert (length(a) == 3 * |nonce|);
    ()
